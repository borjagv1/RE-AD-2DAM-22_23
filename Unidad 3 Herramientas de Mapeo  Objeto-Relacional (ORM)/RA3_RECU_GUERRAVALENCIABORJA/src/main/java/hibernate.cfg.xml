<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory name="MiConexion">
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="hibernate.connection.password">CAFETERIA</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:XE</property>
        <property name="hibernate.connection.username">CAFETERIA</property>
        <property name="hibernate.default_schema">CAFETERIA</property>
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
        <property name="hibernate.hbm2ddl.auto">none</property>
        <property name="hibernate.search.autoregister_listeners">true</property>
        <property name="hibernate.validator.apply_to_ddl">false</property>
        <mapping resource="datos/AllergensProducts.hbm.xml" />
        <mapping resource="datos/Orders.hbm.xml" />
        <mapping resource="datos/OrdersProducts.hbm.xml" />
        <mapping resource="datos/Turns.hbm.xml" />
        <mapping resource="datos/Categories.hbm.xml" />
        <mapping resource="datos/Bookings.hbm.xml" />
        <mapping resource="datos/Products.hbm.xml" />
        <mapping resource="datos/Users.hbm.xml" />
        <mapping resource="datos/ResumenMenus.hbm.xml" />
        <mapping resource="datos/Tables.hbm.xml" />
        <mapping resource="datos/Allergens.hbm.xml" />
        <mapping resource="datos/DishesMenus.hbm.xml" />
    </session-factory>
</hibernate-configuration>
